<project name="archive-build" default="archive">

   <!--* Where the build dir lives *-->
   <property name="builds.path"  value="${wl.home}/api-build-deploy/builds"/>

   <!--* Should be set externally *-->
   <property name="archive.dir" value="${builds.path}"/>

   <!--* Should be set externally *-->
   <property name="build.name" value="no-build-name-supplied"/>


   <!--* Task to archive a build *-->
   <target name="archive">
      <zip zipfile="${archive.dir}/${build.name}.zip"
           basedir="${builds.path}"
           includes="${build.name}/**"
           update="false"/>
      <delete dir="${builds.path}/${build.name}"/>
   </target>

   <!--* Task to unarchive a build *-->
   <target name="unarchive">
      <unzip src="${archive.dir}/${build.name}.zip" dest="${builds.path}" />
   </target>

</project>
